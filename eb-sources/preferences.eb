//! Application Update

prefs {
  stackView \PrefsAppUpdatePage vStack set (margins: 12) {
    StaticLabel (title: "Application Update", bold: yes, size: .regular, alignment: .center)
    hStack {
      Button (title: "Check for Application Updates…", size: .regular) { $run checkForAppUpdateAction }
      StaticLabel (title: "Using…", bold: no, size: .regular, alignment: .center) [configurator usingSparkleTextFieldConfigurator]
      space
    }
    hStack {
      Checkbox (title: "Automatically Check for Updates", size: .regular) [configurator automaticallyCheckForUpdatesConfigurator]
      PopUpButton (size: .regular) [configurator updateCheckIntervalPopUpButtonConfigurator]
      space
    }
    hStack {
      StaticLabel (title: "Last Check Time", bold: no, size: .regular, alignment: .center)
      StaticLabel (title: "?", bold: no, size: .regular, alignment: .center) [configurator sparkleLastCheckTimeTextFieldConfigurator]
      space
    }
    WebView (url: "https://pierremolinaro.github.io/ElCanari-distribution/release-notes.html") {
      set (minHeight: 500)
    }
  }

  action checkForAppUpdateAction ;
}

