//! Main View

prefs {
  stackView \mPrefsMainView vStack set (spacing: 0) set (topMargin: 12) {
    newView prefsPageView = \PrefsPageView ()
    newView prefsUserInterfacePage = \PrefsUserInterfacePage ()
    newView prefsAppUpdatePage = \PrefsAppUpdatePage ()
    newView prefsLibraryPage = \PrefsLibraryPage ()
    hStack {
      space
      SegmentedControlWithPages (documentView: view prefsPageView, equalWidth: no, size : .regular) {
        addPage (image: "settings", title: "User Interface", tooltip: "User Interface", pageView: view prefsUserInterfacePage)
        addPage (image: "update", title: "Application Update", tooltip: "Application Update", pageView: view prefsAppUpdatePage)
        addPage (image: "library", title: "Library", tooltip: "Library", pageView: view prefsLibraryPage)
        $selectedPage prefs.mSelectedPrefsPage
      }
      space
    }
    view prefsPageView
  }
  
  stackView \PrefsPageView vStack set (spacing: 0) {
  }

  property Int mSelectedPrefsPage default 0 ;
}

